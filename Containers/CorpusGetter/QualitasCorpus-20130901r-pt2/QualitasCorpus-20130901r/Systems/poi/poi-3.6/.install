#!/usr/bin/perl -w

use strict;

if ($ARGV[0] eq "-list") {
	my @list = list_names($ARGV[1]);
	printf("@list");
} elsif ($ARGV[0] eq "-reduced") {
	my $destination = $ARGV[1];
	install_reduced($destination);
} else {
	my $destination = $ARGV[0];
	install_reduced($destination);
}

sub install_reduced {
	my ($corpusdir) = @_;
	my $src = "poi-src-3.6-20091214.tar.gz";
	my $bin = "poi-bin-3.6-20091214.tar.gz";
	my @files = ("poi-3.6/poi-examples-3.6-20091214.jar","poi-3.6/lib/commons-logging-1.1.jar","poi-3.6/poi-scratchpad-3.6-20091214.jar","poi-3.6/ooxml-lib/dom4j-1.6.1.jar","poi-3.6/ooxml-lib/xmlbeans-2.3.0.jar","poi-3.6/poi-ooxml-3.6-20091214.jar","poi-3.6/ooxml-lib/geronimo-stax-api_1.0_spec-1.0.jar","poi-3.6/poi-3.6-20091214.jar","poi-3.6/lib/log4j-1.2.13.jar","poi-3.6/poi-ooxml-schemas-3.6-20091214.jar","poi-3.6/poi-contrib-3.6-20091214.jar","poi-3.6/lib/junit-3.8.1.jar");
	printf("\t\t unpacking $src\n");
	system("tar zxf $corpusdir/compressed/$src -C $corpusdir/src\n") == 0 or die "Failed to extract $src\n";
	printf("\t\t unpacking $bin\n");
	system("tar zxf $corpusdir/compressed/$bin -C $corpusdir/bin @files\n") == 0 or die "Failed to extract $bin\n";
}

sub list_names {
	my ($appverdir) = @_;
	opendir(COMPRESSED, "$appverdir/compressed") || die "can't open $appverdir/compressed: $!";
	my @archives = grep {! /^\.$/ and ! /^\.\.$/ } readdir(COMPRESSED);
	close(COMPRESSED);
	return @archives;
}
