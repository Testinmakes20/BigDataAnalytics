#!/usr/bin/perl -w

use strict;

if ($ARGV[0] eq "-list") {
	my @list = list_names($ARGV[1]);
	printf("@list");
} elsif ($ARGV[0] eq "-reduced") {
	my $destination = $ARGV[1];
	install_reduced($destination);
} else {
	my $destination = $ARGV[0];
	install_reduced($destination);
}

sub install_reduced {
	my ($corpusdir) = @_;
	my $src = "quartz-1.8.3.tar.gz";
	my $bin = "quartz-1.8.3.tar.gz";
	my @files = ("quartz-1.8.3/quartz-1.8.3.jar","quartz-1.8.3/quartz-examples-1.8.3.jar","quartz-1.8.3/lib/slf4j-log4j12-1.5.10.jar","quartz-1.8.3/lib/jta-1.1.jar","quartz-1.8.3/lib/slf4j-api-1.5.10.jar","quartz-1.8.3/quartz-oracle-1.8.3.jar","quartz-1.8.3/quartz-weblogic-1.8.3.jar","quartz-1.8.3/quartz-all-1.8.3.jar","quartz-1.8.3/quartz-jboss-1.8.3.jar","quartz-1.8.3/lib/commons-pool-1.5.4.jar","quartz-1.8.3/lib/log4j-1.2.14.jar","quartz-1.8.3/lib/commons-dbcp-1.3.jar");
	printf("\t\t unpacking $src\n");
	system("tar zxf $corpusdir/compressed/$src -C $corpusdir/src\n") == 0 or die "Failed to extract $src\n";
	printf("\t\t unpacking $bin\n");
	system("tar zxf $corpusdir/compressed/$bin -C $corpusdir/bin @files\n") == 0 or die "Failed to extract $bin\n";
}

sub list_names {
	my ($appverdir) = @_;
	opendir(COMPRESSED, "$appverdir/compressed") || die "can't open $appverdir/compressed: $!";
	my @archives = grep {! /^\.$/ and ! /^\.\.$/ } readdir(COMPRESSED);
	close(COMPRESSED);
	return @archives;
}
