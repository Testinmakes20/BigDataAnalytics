#!/usr/bin/perl -w

use strict;

if ($ARGV[0] eq "-list") {
	my @list = list_names($ARGV[1]);
	printf("@list");
} elsif ($ARGV[0] eq "-reduced") {
	my $destination = $ARGV[1];
	install_reduced($destination);
} else {
	my $destination = $ARGV[0];
	install_reduced($destination);
}

sub install_reduced {
	my ($corpusdir) = @_;
	my $src = "nekohtml-1.9.14.tar.gz";
	my $bin = "nekohtml-1.9.14.tar.gz";
	my @files = ("nekohtml-1.9.14/nekohtmlSamples.jar","nekohtml-1.9.14/lib/bcel-5.2.jar","nekohtml-1.9.14/nekohtml.jar","nekohtml-1.9.14/lib/xerces-2.3.0/xml-apis.jar","nekohtml-1.9.14/lib/junit-3.8.2.jar","nekohtml-1.9.14/lib/maven-ant-tasks-2.0.8.jar","nekohtml-1.9.14/lib/xerces-2.1.0/xercesImpl.jar","nekohtml-1.9.14/lib/xerces-minimal/xercesMinimal.jar","nekohtml-1.9.14/lib/xerces-2.8.1/xml-apis-1.3.03.jar","nekohtml-1.9.14/lib/xerces-2.8.1/xercesImpl-2.8.1.jar","nekohtml-1.9.14/lib/xerces-2.1.0/xmlParserAPIs.jar");
	printf("\t\t unpacking $src\n");
	system("tar zxf $corpusdir/compressed/$src -C $corpusdir/src\n") == 0 or die "Failed to extract $src\n";
	printf("\t\t unpacking $bin\n");
	system("tar zxf $corpusdir/compressed/$bin -C $corpusdir/bin @files\n") == 0 or die "Failed to extract $bin\n";
}

sub list_names {
	my ($appverdir) = @_;
	opendir(COMPRESSED, "$appverdir/compressed") || die "can't open $appverdir/compressed: $!";
	my @archives = grep {! /^\.$/ and ! /^\.\.$/ } readdir(COMPRESSED);
	close(COMPRESSED);
	return @archives;
}
