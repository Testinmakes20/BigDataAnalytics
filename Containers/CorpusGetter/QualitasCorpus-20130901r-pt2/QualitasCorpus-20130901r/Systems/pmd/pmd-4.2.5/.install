#!/usr/bin/perl -w

use strict;

if ($ARGV[0] eq "-list") {
	my @list = list_names($ARGV[1]);
	printf("@list");
} elsif ($ARGV[0] eq "-reduced") {
	my $destination = $ARGV[1];
	install_reduced($destination);
} else {
	my $destination = $ARGV[0];
	install_reduced($destination);
}

sub install_reduced {
	my ($corpusdir) = @_;
	my $src = "pmd-src-4.2.5.zip";
	my $bin = "pmd-bin-4.2.5.zip";
	my @files = ("pmd-4.2.5/lib/junit-4.4.jar","pmd-4.2.5/java14/lib/backport-util-concurrent.jar","pmd-4.2.5/lib/asm-3.1.jar","pmd-4.2.5/lib/jaxen-1.1.1.jar","pmd-4.2.5/java14/lib/asm-util-3.1.jar","pmd-4.2.5/java14/lib/pmd14-4.2.5.jar","pmd-4.2.5/java14/lib/retroweaver-2.0.5.jar","pmd-4.2.5/java14/lib/asm-commons-3.1.jar","pmd-4.2.5/java14/lib/junit.jar","pmd-4.2.5/lib/pmd-4.2.5.jar","pmd-4.2.5/java14/lib/retroweaver-rt-2.0.5.jar","pmd-4.2.5/java14/lib/pmd14-test-4.2.5.jar");
	printf("\t\t unpacking $src\n");
	system("unzip -qo $corpusdir/compressed/$src -d $corpusdir/src\n") == 0 or die "Failed to extract $src\n";
	printf("\t\t unpacking $bin\n");
	system("unzip -qo $corpusdir/compressed/$bin @files -d $corpusdir/bin\n") == 0 or die "Failed to extract $bin\n";
}

sub list_names {
	my ($appverdir) = @_;
	opendir(COMPRESSED, "$appverdir/compressed") || die "can't open $appverdir/compressed: $!";
	my @archives = grep {! /^\.$/ and ! /^\.\.$/ } readdir(COMPRESSED);
	close(COMPRESSED);
	return @archives;
}
