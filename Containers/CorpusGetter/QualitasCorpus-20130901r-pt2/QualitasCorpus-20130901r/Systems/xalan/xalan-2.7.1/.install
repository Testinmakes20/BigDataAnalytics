#!/usr/bin/perl -w

use strict;

if ($ARGV[0] eq "-list") {
	my @list = list_names($ARGV[1]);
	printf("@list");
} elsif ($ARGV[0] eq "-reduced") {
	my $destination = $ARGV[1];
	install_reduced($destination);
} else {
	my $destination = $ARGV[0];
	install_reduced($destination);
}

sub install_reduced {
	my ($corpusdir) = @_;
	my $src = "xalan-j_2_7_1-src-2jars.tar.gz";
	my $bin = "xalan-j_2_7_1-bin-2jars.tar.gz";
	my @files = ("xalan-j_2_7_1/samples/xsltcbrazil.jar","xalan-j_2_7_1/xalan.jar","xalan-j_2_7_1/xsltc.jar","xalan-j_2_7_1/samples/xsltcejb.jar","xalan-j_2_7_1/xml-apis.jar","xalan-j_2_7_1/serializer.jar","xalan-j_2_7_1/samples/xsltcapplet.jar","xalan-j_2_7_1/samples/xalansamples.jar","xalan-j_2_7_1/xercesImpl.jar","xalan-j_2_7_1/samples/xsltcservlet.jar");
	printf("\t\t unpacking $src\n");
	system("tar zxf $corpusdir/compressed/$src -C $corpusdir/src\n") == 0 or die "Failed to extract $src\n";
	printf("\t\t unpacking $bin\n");
	system("tar zxf $corpusdir/compressed/$bin -C $corpusdir/bin @files\n") == 0 or die "Failed to extract $bin\n";
}

sub list_names {
	my ($appverdir) = @_;
	opendir(COMPRESSED, "$appverdir/compressed") || die "can't open $appverdir/compressed: $!";
	my @archives = grep {! /^\.$/ and ! /^\.\.$/ } readdir(COMPRESSED);
	close(COMPRESSED);
	return @archives;
}
