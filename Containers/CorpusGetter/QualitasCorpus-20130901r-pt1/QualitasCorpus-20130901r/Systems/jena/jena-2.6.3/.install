#!/usr/bin/perl -w

use strict;

if ($ARGV[0] eq "-list") {
	my @list = list_names($ARGV[1]);
	printf("@list");
} elsif ($ARGV[0] eq "-reduced") {
	my $destination = $ARGV[1];
	install_reduced($destination);
} else {
	my $destination = $ARGV[0];
	install_reduced($destination);
}

sub install_reduced {
	my ($corpusdir) = @_;
	my $src = "jena-2.6.3-sources.jar";
	my $bin = "jena-2.6.3.zip";
	my @files = ("Jena-2.6.3/lib/jena-2.6.3-tests.jar","Jena-2.6.3/jena-2.6.3-javadoc.jar","Jena-2.6.3/lib/xercesImpl-2.7.1.jar","Jena-2.6.3/lib/slf4j-api-1.5.8.jar","Jena-2.6.3/lib/arq-2.8.4.jar","Jena-2.6.3/lib/wstx-asl-3.2.9.jar","Jena-2.6.3/lib/stax-api-1.0.1.jar","Jena-2.6.3/lib/slf4j-log4j12-1.5.8.jar","Jena-2.6.3/lib/jena-2.6.3.jar","Jena-2.6.3/lib/icu4j-3.4.4.jar","Jena-2.6.3/lib/iri-0.8-sources.jar","Jena-2.6.3/lib/log4j-1.2.13.jar","Jena-2.6.3/lib/junit-4.5.jar","Jena-2.6.3/lib/iri-0.8.jar","Jena-2.6.3/lib/lucene-core-2.3.1.jar");
	printf("\t\t unpacking $src\n");
	system("unzip -qo $corpusdir/compressed/$src -d $corpusdir/src\n") == 0 or die "Failed to extract $src\n";
	printf("\t\t unpacking $bin\n");
	system("unzip -qo $corpusdir/compressed/$bin @files -d $corpusdir/bin\n") == 0 or die "Failed to extract $bin\n";
}

sub list_names {
	my ($appverdir) = @_;
	opendir(COMPRESSED, "$appverdir/compressed") || die "can't open $appverdir/compressed: $!";
	my @archives = grep {! /^\.$/ and ! /^\.\.$/ } readdir(COMPRESSED);
	close(COMPRESSED);
	return @archives;
}
