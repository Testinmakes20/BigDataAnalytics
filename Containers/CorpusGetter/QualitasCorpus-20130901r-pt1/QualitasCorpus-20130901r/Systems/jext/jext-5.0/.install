#!/usr/bin/perl -w

use strict;

if ($ARGV[0] eq "-list") {
	my @list = list_names($ARGV[1]);
	printf("@list");
} elsif ($ARGV[0] eq "-reduced") {
	my $destination = $ARGV[1];
	install_reduced($destination);
} else {
	my $destination = $ARGV[0];
	install_reduced($destination);
}

sub install_reduced {
	my ($corpusdir) = @_;
	my $src = "jext-sources-5.0.tar.gz";
	my $bin = "jext-5.0.tar.gz";
	my @files = (
	  "jext-5.0/bin/plugins/KLNF.jar", 
	  "jext-5.0/bin/plugins/HTML.jar", 
	  "jext-5.0/bin/plugins/HyperTyper.jar", 
	  "jext-5.0/bin/plugins/Java.jar", 
	  "jext-5.0/bin/plugins/FindAll.jar", 
	  "jext-5.0/bin/plugins/FindInFiles.jar", 
	  "jext-5.0/bin/plugins/FunnyBrackets.jar",
	  "jext-5.0/bin/plugins/KeystrokeRecorder.jar",
	  "jext-5.0/bin/plugins/PhpPlugin.jar",
	  "jext-5.0/bin/plugins/PyBrowse.jar",
	  "jext-5.0/lib/dawn-1.1.1.jar",
	  "jext-5.0/lib/jext-5.0.jar",
	  "jext-5.0/lib/jython-2.1.jar",
	  "jext-5.0/lib/looks-1.2.2.jar");
	printf("\t\t unpacking $src\n");
	system("tar xf $corpusdir/compressed/$src -C $corpusdir/src\n") == 0 or die "Failed to extract $src\n";
	printf("\t\t unpacking $bin\n");
	system("tar xf $corpusdir/compressed/$bin -C $corpusdir/bin @files\n") == 0 or die "Failed to extract $bin\n";
}

sub list_names {
	my ($appverdir) = @_;
	opendir(COMPRESSED, "$appverdir/compressed") || die "can't open $appverdir/compressed: $!";
	my @archives = grep {! /^\.$/ and ! /^\.\.$/ } readdir(COMPRESSED);
	close(COMPRESSED);
	return @archives;
}
