#!/usr/bin/perl -w

use strict;

if ($ARGV[0] eq "-list") {
	my @list = list_names($ARGV[1]);
	printf("@list");
} elsif ($ARGV[0] eq "-reduced") {
	my $destination = $ARGV[1];
	install_reduced($destination);
} else {
	my $destination = $ARGV[0];
	install_reduced($destination);
}

sub install_reduced {
	my ($corpusdir) = @_;
	my $src = "findbugs-1.3.9-source.zip";
	my $bin = "findbugs-1.3.9.tar.gz";
	my @files = ("findbugs-1.3.9/lib/jaxen-1.1.1.jar","findbugs-1.3.9/lib/asm-tree-3.1.jar","findbugs-1.3.9/lib/ant.jar","findbugs-1.3.9/lib/dom4j-1.6.1.jar","findbugs-1.3.9/lib/jdepend-2.9.jar","findbugs-1.3.9/lib/annotations.jar","findbugs-1.3.9/lib/findbugs-ant.jar","findbugs-1.3.9/lib/jsr305.jar","findbugs-1.3.9/lib/asm-3.1.jar","findbugs-1.3.9/lib/commons-lang-2.4.jar","findbugs-1.3.9/lib/asm-util-3.1.jar","findbugs-1.3.9/lib/asm-commons-3.1.jar","findbugs-1.3.9/lib/bcel.jar","findbugs-1.3.9/lib/findbugs.jar","findbugs-1.3.9/lib/asm-analysis-3.1.jar","findbugs-1.3.9/lib/asm-xml-3.1.jar","findbugs-1.3.9/lib/jFormatString.jar","findbugs-1.3.9/lib/mysql-connector-java-5.1.7-bin.jar");
	printf("\t\t unpacking $src\n");
	system("unzip -qo $corpusdir/compressed/$src -d $corpusdir/src\n") == 0 or die "Failed to extract $src\n";
	printf("\t\t unpacking $bin\n");
	system("tar zxf $corpusdir/compressed/$bin -C $corpusdir/bin @files\n") == 0 or die "Failed to extract $bin\n";
}

sub list_names {
	my ($appverdir) = @_;
	opendir(COMPRESSED, "$appverdir/compressed") || die "can't open $appverdir/compressed: $!";
	my @archives = grep {! /^\.$/ and ! /^\.\.$/ } readdir(COMPRESSED);
	close(COMPRESSED);
	return @archives;
}
