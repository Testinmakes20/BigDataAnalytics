#!/usr/bin/perl -w

use strict;

if ($ARGV[0] eq "-list") {
	my @list = list_names($ARGV[1]);
	printf("@list");
} elsif ($ARGV[0] eq "-reduced") {
	my $destination = $ARGV[1];
	install_reduced($destination);
} else {
	my $destination = $ARGV[0];
	install_reduced($destination);
}

sub install_reduced {
	my ($corpusdir) = @_;
	my $src = "aspectj-1.6.9-src.jar";
	my $bin = "aspectj-1.6.9-installed.jar"; # manually installed
	my @files = ("");
	printf("\t\t unpacking $src\n");
	system("unzip -qo $corpusdir/compressed/$src -d $corpusdir/src\n") == 0 or die "Failed to extract $src\n";
	# Unpack second level for source
	my @src_archives = ("aspectjrt1.6.9-src.jar", "aspectjtools1.6.9-src.jar", "aspectjweaver1.6.9-src.jar", "org.aspectj.matcher-1.6.9-src.jar");
	foreach my $src_ar (@src_archives) {
	  system("unzip -qo $corpusdir/src/$src_ar -d $corpusdir/src\n") == 0 or die "Failed to extract $src_ar\n";
	  system("rm $corpusdir/src/$src_ar");
	}
	printf("\t\t unpacking $bin\n");
	system("unzip -qo $corpusdir/compressed/$bin -d $corpusdir/bin\n") == 0 or die "Failed to extract $bin\n";
}

sub list_names {
	my ($appverdir) = @_;
	opendir(COMPRESSED, "$appverdir/compressed") || die "can't open $appverdir/compressed: $!";
	my @archives = grep {! /^\.$/ and ! /^\.\.$/ } readdir(COMPRESSED);
	close(COMPRESSED);
	return @archives;
}
