#!/usr/bin/perl -w

use strict;

if ($ARGV[0] eq "-list") {
	my @list = list_names($ARGV[1]);
	printf("@list");
} elsif ($ARGV[0] eq "-reduced") {
	my $destination = $ARGV[1];
	install_reduced($destination);
} else {
	my $destination = $ARGV[0];
	install_reduced($destination);
}

sub install_reduced {
	my ($corpusdir) = @_;
	my $src = "jfreechart-1.0.13.tar.gz";
	my $bin = "jfreechart-1.0.13.tar.gz";
	my @files = ("jfreechart-1.0.13/lib/jfreechart-1.0.13-experimental.jar","jfreechart-1.0.13/lib/jfreechart-1.0.13-swt.jar","jfreechart-1.0.13/jfreechart-1.0.13-demo.jar","jfreechart-1.0.13/lib/gnujaxp.jar","jfreechart-1.0.13/lib/jfreechart-1.0.13.jar","jfreechart-1.0.13/lib/jcommon-1.0.16.jar","jfreechart-1.0.13/lib/iText-2.1.5.jar","jfreechart-1.0.13/lib/junit.jar","jfreechart-1.0.13/lib/swtgraphics2d.jar","jfreechart-1.0.13/lib/servlet.jar");
	printf("\t\t unpacking $src\n");
	system("tar zxf $corpusdir/compressed/$src -C $corpusdir/src\n") == 0 or die "Failed to extract $src\n";
	printf("\t\t unpacking $bin\n");
	system("tar zxf $corpusdir/compressed/$bin -C $corpusdir/bin @files\n") == 0 or die "Failed to extract $bin\n";
}

sub list_names {
	my ($appverdir) = @_;
	opendir(COMPRESSED, "$appverdir/compressed") || die "can't open $appverdir/compressed: $!";
	my @archives = grep {! /^\.$/ and ! /^\.\.$/ } readdir(COMPRESSED);
	close(COMPRESSED);
	return @archives;
}
