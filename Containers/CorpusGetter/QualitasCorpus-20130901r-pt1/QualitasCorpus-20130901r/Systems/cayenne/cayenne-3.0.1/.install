#!/usr/bin/perl -w

use strict;

if ($ARGV[0] eq "-list") {
	my @list = list_names($ARGV[1]);
	printf("@list");
} elsif ($ARGV[0] eq "-reduced") {
	my $destination = $ARGV[1];
	install_reduced($destination);
} else {
	my $destination = $ARGV[0];
	install_reduced($destination);
}

sub install_reduced {
	my ($corpusdir) = @_;
	my $src = "cayenne-3.0.1-src.tar.gz";
	my $bin = "cayenne-3.0.1.tar.gz";
	my @files = ("cayenne-3.0.1/lib/third-party/commons-logging-1.1.jar","cayenne-3.0.1/lib/cayenne-server-3.0.1.jar","cayenne-3.0.1/lib/third-party/ashwood-2.0.jar","cayenne-3.0.1/lib/third-party/vpp-2.2.1.jar","cayenne-3.0.1/lib/third-party/commons-collections-3.1.jar","cayenne-3.0.1/lib/cayenne-modeler-3.0.1.jar","cayenne-3.0.1/bin/CayenneModeler.jar","cayenne-3.0.1/lib/cayenne-tools-3.0.1.jar","cayenne-3.0.1/lib/cayenne-client-3.0.1.jar");
	printf("\t\t unpacking $src\n");
	system("tar zxf $corpusdir/compressed/$src -C $corpusdir/src\n") == 0 or die "Failed to extract $src\n";
	printf("\t\t unpacking $bin\n");
	system("tar zxf $corpusdir/compressed/$bin -C $corpusdir/bin @files\n") == 0 or die "Failed to extract $bin\n";
}

sub list_names {
	my ($appverdir) = @_;
	opendir(COMPRESSED, "$appverdir/compressed") || die "can't open $appverdir/compressed: $!";
	my @archives = grep {! /^\.$/ and ! /^\.\.$/ } readdir(COMPRESSED);
	close(COMPRESSED);
	return @archives;
}
