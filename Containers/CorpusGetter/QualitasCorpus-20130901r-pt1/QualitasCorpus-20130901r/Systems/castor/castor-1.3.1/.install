#!/usr/bin/perl -w

use strict;

if ($ARGV[0] eq "-list") {
	my @list = list_names($ARGV[1]);
	printf("@list");
} elsif ($ARGV[0] eq "-reduced") {
	my $destination = $ARGV[1];
	install_reduced($destination);
} else {
	my $destination = $ARGV[0];
	install_reduced($destination);
}

sub install_reduced {
	my ($corpusdir) = @_;
	my $src = "castor-1.3.1-src.zip";
	my $bin = "castor-1.3.1.zip";
	my @files = ("castor-1.3.1/castor-1.3.1.jar","castor-1.3.1/castor-1.3.1-xml-schema.jar","castor-1.3.1/castor-1.3.1-ddlgen.jar","castor-1.3.1/castor-1.3.1-anttasks.jar","castor-1.3.1/jta1.0.1.jar","castor-1.3.1/castor-1.3.1-jdo.jar","castor-1.3.1/castor-1.3.1-core.jar","castor-1.3.1/castor-1.3.1-xml.jar","castor-1.3.1/castor-1.3.1-codegen.jar");
	printf("\t\t unpacking $src\n");
	system("unzip -qo $corpusdir/compressed/$src -d $corpusdir/src\n") == 0 or die "Failed to extract $src\n";
	printf("\t\t unpacking $bin\n");
	system("unzip -qo $corpusdir/compressed/$bin @files -d $corpusdir/bin\n") == 0 or die "Failed to extract $bin\n";
}

sub list_names {
	my ($appverdir) = @_;
	opendir(COMPRESSED, "$appverdir/compressed") || die "can't open $appverdir/compressed: $!";
	my @archives = grep {! /^\.$/ and ! /^\.\.$/ } readdir(COMPRESSED);
	close(COMPRESSED);
	return @archives;
}
