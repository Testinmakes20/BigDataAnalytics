#!/usr/bin/perl -w

use strict;

if ($ARGV[0] eq "-list") {
	my @list = list_names($ARGV[1]);
	printf("@list");
} elsif ($ARGV[0] eq "-reduced") {
	my $destination = $ARGV[1];
	install_reduced($destination);
} else {
	my $destination = $ARGV[0];
	install_reduced($destination);
}

sub install_reduced {
	my ($corpusdir) = @_;
	my $src = "informa-0.7.0-alpha2-with-dependencies.zip";
	my $bin = "informa-0.7.0-alpha2-with-dependencies.zip";
	my @files = ("informa-0.7.0-alpha2/informa.jar","informa-0.7.0-alpha2/lib/asm.jar","informa-0.7.0-alpha2/lib/log4j.jar","informa-0.7.0-alpha2/lib/spring.jar","informa-0.7.0-alpha2/lib/jta.jar","informa-0.7.0-alpha2/lib/jdom.jar","informa-0.7.0-alpha2/lib/commons-collections.jar","informa-0.7.0-alpha2/lib/antlr.jar","informa-0.7.0-alpha2/lib/asm-attrs.jar","informa-0.7.0-alpha2/lib/junit.jar","informa-0.7.0-alpha2/lib/commons-beanutils.jar","informa-0.7.0-alpha2/lib/commons-logging.jar","informa-0.7.0-alpha2/lib/dom4j.jar","informa-0.7.0-alpha2/lib/lucene.jar","informa-0.7.0-alpha2/lib/hibernate3.jar","informa-0.7.0-alpha2/lib/commons-lang.jar","informa-0.7.0-alpha2/lib/spring-mock.jar","informa-0.7.0-alpha2/lib/ehcache.jar","informa-0.7.0-alpha2/lib/cglib-nodep.jar","informa-0.7.0-alpha2/lib/hsqldb.jar");
	printf("\t\t unpacking $src\n");
	system("unzip -qo $corpusdir/compressed/$src -d $corpusdir/src\n") == 0 or die "Failed to extract $src\n";
	printf("\t\t unpacking $bin\n");
	system("unzip -qo $corpusdir/compressed/$bin @files -d $corpusdir/bin\n") == 0 or die "Failed to extract $bin\n";
}

sub list_names {
	my ($appverdir) = @_;
	opendir(COMPRESSED, "$appverdir/compressed") || die "can't open $appverdir/compressed: $!";
	my @archives = grep {! /^\.$/ and ! /^\.\.$/ } readdir(COMPRESSED);
	close(COMPRESSED);
	return @archives;
}
