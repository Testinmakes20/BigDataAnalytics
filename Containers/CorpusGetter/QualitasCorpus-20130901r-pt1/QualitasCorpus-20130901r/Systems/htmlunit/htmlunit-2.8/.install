#!/usr/bin/perl -w

use strict;

if ($ARGV[0] eq "-list") {
	my @list = list_names($ARGV[1]);
	printf("@list");
} elsif ($ARGV[0] eq "-reduced") {
	my $destination = $ARGV[1];
	install_reduced($destination);
} else {
	my $destination = $ARGV[0];
	install_reduced($destination);
}

sub install_reduced {
	my ($corpusdir) = @_;
	my $src = "htmlunit-2.8-src.zip";
	my $bin = "htmlunit-2.8.zip";
	my @files = ("htmlunit-2.8/lib/commons-logging-1.1.1.jar","htmlunit-2.8/lib/nekohtml-1.9.14.jar","htmlunit-2.8/lib/xml-apis-1.3.04.jar","htmlunit-2.8/lib/apache-mime4j-0.6.jar","htmlunit-2.8/lib/commons-codec-1.4.jar","htmlunit-2.8/lib/commons-io-1.4.jar","htmlunit-2.8/lib/htmlunit-2.8.jar","htmlunit-2.8/lib/commons-collections-3.2.1.jar","htmlunit-2.8/lib/serializer-2.7.1.jar","htmlunit-2.8/lib/xercesImpl-2.9.1.jar","htmlunit-2.8/lib/htmlunit-core-js-2.8.jar","htmlunit-2.8/lib/cssparser-0.9.5.jar","htmlunit-2.8/lib/commons-lang-2.4.jar","htmlunit-2.8/lib/httpclient-4.0.1.jar","htmlunit-2.8/lib/xalan-2.7.1.jar","htmlunit-2.8/lib/httpcore-4.0.1.jar","htmlunit-2.8/lib/sac-1.3.jar","htmlunit-2.8/lib/httpmime-4.0.1.jar");
	printf("\t\t unpacking $src\n");
	system("unzip -qo $corpusdir/compressed/$src -d $corpusdir/src\n") == 0 or die "Failed to extract $src\n";
	printf("\t\t unpacking $bin\n");
	system("unzip -qo $corpusdir/compressed/$bin @files -d $corpusdir/bin\n") == 0 or die "Failed to extract $bin\n";
}

sub list_names {
	my ($appverdir) = @_;
	opendir(COMPRESSED, "$appverdir/compressed") || die "can't open $appverdir/compressed: $!";
	my @archives = grep {! /^\.$/ and ! /^\.\.$/ } readdir(COMPRESSED);
	close(COMPRESSED);
	return @archives;
}
