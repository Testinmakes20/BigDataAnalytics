#!/usr/bin/perl -w

use strict;

if ($ARGV[0] eq "-list") {
	my @list = list_names($ARGV[1]);
	printf("@list");
} elsif ($ARGV[0] eq "-reduced") {
	my $destination = $ARGV[1];
	install_reduced($destination);
} else {
	my $destination = $ARGV[0];
	install_reduced($destination);
}

sub install_reduced {
	my ($corpusdir) = @_;
	my $src = "iReport-3.7.5-src.zip";
	my $bin = "iReport-3.7.5.tar.gz";
	my @files = (
"iReport-3.7.5/ireport/modules/com-jaspersoft-ireport-addons.jar",
"iReport-3.7.5/ireport/modules/com-jaspersoft-ireport-components.jar",
"iReport-3.7.5/ireport/modules/com-jaspersoft-ireport-designer-standalone.jar",
"iReport-3.7.5/ireport/modules/com-jaspersoft-ireport-heartbeat.jar",
"iReport-3.7.5/ireport/modules/com-jaspersoft-ireport-jasperserver.jar",
"iReport-3.7.5/ireport/modules/com-jaspersoft-ireport-samples.jar",
"iReport-3.7.5/ireport/modules/com-jaspersoft-ireport.jar",
"iReport-3.7.5/ireport/modules/com-jaspersoft-jrx.jar",
"iReport-3.7.5/ireport/modules/ext/jasperreports-extensions-3.5.3.jar",
);
	printf("\t\t unpacking $src\n");
	system("unzip -qo $corpusdir/compressed/$src -d $corpusdir/src\n") == 0 or die "Failed to extract $src\n";
	printf("\t\t unpacking $bin\n");
	foreach my $file (@files) {
	  system("tar zxf $corpusdir/compressed/$bin -C $corpusdir/bin $file\n") == 0 or die "Failed to extract $file\n";
	}
}

sub list_names {
	my ($appverdir) = @_;
	opendir(COMPRESSED, "$appverdir/compressed") || die "can't open $appverdir/compressed: $!";
	my @archives = grep {! /^\.$/ and ! /^\.\.$/ } readdir(COMPRESSED);
	close(COMPRESSED);
	return @archives;
}
